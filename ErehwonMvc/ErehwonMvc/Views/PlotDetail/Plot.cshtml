@using ErehwonMvc.Helpers
@model ErehwonMvc.Models.PlotDetailModel

<h2>@Model.PlotName</h2>
<div class="col-md-12">
    @{
        //Set plot image 
        var imgPath = ViewHelpers.GetPlotThumbnail(@Model.PlotCategoryId);
    }
    <img class="col-md-6" alt="Plot Image" src="@imgPath"/>
    <div class="col-md-6">
        <p>@Model.PlotDescription</p>
        <h4>Available ha</h4>
        <p>@Model.Hectares ha</p>
        <button class="btn btn-success btn-sm">Purchase</button>
    </div> 
</div>
